<% layout("/layouts/boilerplate.ejs") %>
<div class="row mt-3">
    <h1 class="col-lg-6 offset-lg-3">Login on WanderLust</h1>
    <div class="col-lg-6 offset-lg-3">
        <form action="/login" method="post" class="needs-validation" novalidate>
            <div class="mb-3">
                <label for="username" class="form-label">Username</label>
                <input
                    id="username"
                    type="text"
                    name="username"
                    class="form-control"
                    required
                />
            </div>
            <div class="mb-3">
                <label for="password" class="form-label">Password</label>
                <input
                    id="password"
                    type="password"
                    name="password"
                    class="form-control"
                    required
                />
            </div>
            <button class="btn mb-3 add-btn">Login</button>
        </form>
    </div>
</div>