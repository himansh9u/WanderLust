<% if(success && success.length){ %>
    <div class="alert alert-success alert-dismissible fade show col-sm-6 offset-3 disappearing-alert" role="alert">
        <i class="alert-icons fa-solid fa-circle-check"></i>
        <%= success %>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
<% } %>

<% if(error && error.length){ %>
    <div class="alert alert-danger alert-dismissible fade show col-sm-6 offset-3 disappearing-alert" role="alert">
        <i class="alert-icons fa-solid fa-triangle-exclamation"></i><%= error %>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
<% } %>
